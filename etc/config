module GPIO
  LOCK = 31
  UNLOCK = 30
  LOCKED = 48
  UNLOCKED = 60
  DOOR = 51
end
module Daemon
  SOCKET = File.join(File.dirname($0), "..", "var", "socket")
  SOCKET_MODE = 0660
  UID = Process::UID.from_name("sentry")
  GID = Process::GID.from_name("sentry")
  REGISTRY = File.join(File.dirname($0), "..", "var", "registry")
end
